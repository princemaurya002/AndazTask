    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:tint="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <!-- Profile Title -->
    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backArrow"
        app:layout_constraintBottom_toBottomOf="@id/backArrow"
        android:layout_marginStart="16dp"/>

    <!-- Support Button -->
    <Button
        android:id="@+id/supportButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="support"
        android:textAllCaps="false"
        android:background="@drawable/support_button_bg"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Profile Header Section (modularized) -->
    <include
        layout="@layout/profile_header_section"
        android:id="@+id/profileHeaderSection"
        app:layout_constraintTop_toBottomOf="@id/supportButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/> 