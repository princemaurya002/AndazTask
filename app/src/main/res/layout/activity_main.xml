<ImageView
    android:id="@+id/profileImage"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:src="@drawable/profile_pic"
    android:scaleType="centerCrop"
    android:background="@drawable/circle_bg"
    app:layout_constraintTop_toBottomOf="@id/backArrow"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="32dp"
    android:layout_marginStart="24dp"/>

    <!-- Edit Icon -->
<ImageView
android:id="@+id/editIcon"
android:layout_width="32dp"
android:layout_height="32dp"
android:src="@drawable/ic_edit"
android:contentDescription="Edit"
android:tint="#fff"
app:layout_constraintTop_toTopOf="@id/profileImage"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginEnd="24dp"/>

    <!-- Name -->
<TextView
android:id="@+id/userName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="andaz Kumar"
android:textColor="#fff"
android:textSize="20sp"
android:textStyle="bold"
app:layout_constraintTop_toTopOf="@id/profileImage"
app:layout_constraintStart_toEndOf="@id/profileImage"
android:layout_marginStart="16dp"/>

    <!-- Member Since -->
<TextView
android:id="@+id/memberSince"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="member since Dec, 2020"
android:textColor="#aaa"
android:textSize="14sp"
app:layout_constraintTop_toBottomOf="@id/userName"
app:layout_constraintStart_toStartOf="@id/userName"
android:layout_marginTop="4dp"/>

    <!-- CRED Garage Card -->
<LinearLayout
android:id="@+id/garageCard"
android:layout_width="0dp"
android:layout_height="64dp"
android:orientation="horizontal"
android:background="#222"
android:padding="16dp"
android:gravity="center_vertical"
app:layout_constraintTop_toBottomOf="@id/profileImage"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="24dp"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp">

<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/ic_car"
    android:tint="#fff"/>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get to know your vehicles, inside out"
        android:textColor="#aaa"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRED garage"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>

<ImageView
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_arrow_right"
    android:tint="#fff"/>
</LinearLayout>

    <!-- Credit Score, Cashback, Bank Balance -->
<LinearLayout
android:id="@+id/scoreRow"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@android:color/transparent"
app:layout_constraintTop_toBottomOf="@id/garageCard"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="24dp"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp">

<!-- Credit Score -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_score"
        android:tint="#aaa"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="credit score • "
        android:textColor="#aaa"
        android:textSize="14sp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFRESH AVAILABLE"
        android:textColor="#00ff00"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="757"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="end"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_right"
        android:tint="#fff"
        android:layout_marginStart="8dp"/>
</LinearLayout>

<!-- Lifetime Cashback -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_rupee"
        android:tint="#aaa"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lifetime cashback"
        android:textColor="#aaa"
        android:textSize="14sp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="₹3"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="end"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_right"
        android:tint="#fff"
        android:layout_marginStart="8dp"/>
</LinearLayout>

<!-- Bank Balance -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_bank"
        android:tint="#aaa"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bank balance"
        android:textColor="#aaa"
        android:textSize="14sp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="check"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="end"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_right"
        android:tint="#fff"
        android:layout_marginStart="8dp"/>
</LinearLayout>
</LinearLayout>
